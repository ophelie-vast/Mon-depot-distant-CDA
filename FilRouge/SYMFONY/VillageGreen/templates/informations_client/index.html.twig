        <input class="form-control" type="text" placeholder="" aria-label="Disabled input example" disabled>
        <input class="form-control" type="text" placeholder="" aria-label="Disabled input example" disabled>
    </div>
</div>

<div class="row">
    <div class="col-12 bouton-connexion">

        <button type="submit" class="btn btn-danger">
            <a class="valider" href="{{ path('profil_client') }}">
                Modifier mes informations
            </a>
        </button>

        <button type="submit" class="btn btn-warning">
            <a class="valider" href="{{ path('coordonnees_bancaires') }}">
                Valider mes informations et passer au paiement
            </a>
        </button>
    </div>
</div>
{% endblock %}