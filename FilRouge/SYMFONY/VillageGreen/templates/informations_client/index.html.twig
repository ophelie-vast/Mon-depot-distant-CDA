            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.adresse }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.ville }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.cp }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.telephone }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.type }}" aria-label="Disabled input example"
            disabled>
    </div>


    <div class="col-6" id="infos-client">
        <p class="adresse">Adresse de livraison</p>
        
        <input class="form-control" type="text" placeholder="" aria-label="Disabled input example" disabled>
