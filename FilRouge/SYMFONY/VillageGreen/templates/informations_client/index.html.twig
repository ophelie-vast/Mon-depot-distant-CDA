{% extends 'base.html.twig' %}

{% block title %} Informations personnelles {% endblock %}

{% block body %}

<div class="row" id="ariane">
    <ul class="crumb">
        <li><a href="{{ path('categorie') }}">Accueil</a></li>
    </ul>
</div>

<h1 id="titre"> Votre profil </h1>

<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6" id="infos-client">
        <p class="adresse">Adresse de facturation</p>

        <input class="form-control" type="text" placeholder="{{ profil.nom }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.prenom }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.adresse }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.ville }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.cp }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.telephone }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.type }}" aria-label="Disabled input example"
            disabled>
    </div>


    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6" id="infos-client">
        <p class="adresse">Adresse de livraison</p>

        <input class="form-control" type="text" placeholder="{{ profil.nom }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.prenom }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.adresse }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.ville }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.cp }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.telephone }}" aria-label="Disabled input example"
            disabled>
        <input class="form-control" type="text" placeholder="{{ profil.type }}" aria-label="Disabled input example"
            disabled>
    </div>
</div>

<div class="row">
    <div class="col-12 pt-4 text-center">

        <button type="submit" class="btn btn-danger">
            <a class="valider" href="{{ path('profil_client') }}">
                Modifier mes informations
            </a>
        </button>

        <button type="submit" class="btn btn-dark">
            <a class="valider" href="{{ path('validation_commande') }}">
                Valider mes informations et passer ma commande
            </a>
        </button>
    </div>
</div>
{% endblock %}